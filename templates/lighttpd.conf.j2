
{% if lighttpd_modules is undefined or "proxy" not in lighttpd_modules %}
server.modules += (
  "mod_proxy"
)
{% endif %}

$HTTP["host"] =~ "^{{rails_app_fqdn | mandatory | regex_escape() }}$" {
    proxy.server = ( "" => ( "{{rails_app_name}}" =>
       ("host" => "/tmp/puma_{{rails_app_name}}.socket"),
    ))
}
